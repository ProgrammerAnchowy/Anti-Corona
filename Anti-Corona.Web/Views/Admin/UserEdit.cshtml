@model UserDetailModel
@{ Layout = "_LayoutAdmin"; }
<div class="row">
    <div class="col-xl-12">
        <input type="hidden" name="UserId" value="@Model.UserId">
        <div class="card easion-card">
            <div class="card-header">
                <div class="easion-card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="easion-card-title"> Complex layout </div>
            </div>
            <div class="card-body ">
                <form asp-controller="Admin" asp-action="UserEdit" method="POST">
                    <input type="hidden" name="UserId" value="@Model.UserId">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Adı</label>
                            <input type="text"  class="form-control" asp-for="FirstName" placeholder="Adı">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Soyadı</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="Soyad">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Email</label>
                            <input  type="text" class="form-control" asp-for="Email" placeholder="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputAddress">Address</label>
                            <textarea class="form-control" asp-for="Address" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="EmailComfirmed" type="checkbox" class="custom-control-input" >
                                <label class="custom-control-label" asp-for="EmailComfirmed">Email Onayı</label>
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            @foreach (var rolename in ViewBag.Roles)
                            {
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox"
                                   class="custom-control-input"
                                   name="selectedRoles"
                                   value="@rolename"
                                   id="@rolename"
                                   @(Model.SelectedRoles.Any(i => i == rolename) ? "checked" : "")>
                            <label class="custom-control-label" for="@rolename">@rolename</label>
                        </div>}
                            <hr>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Değişikleri Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>