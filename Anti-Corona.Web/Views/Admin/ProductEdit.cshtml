@model ProductEditModel
@{ Layout = "_LayoutAdmin"; }
<div class="row">
    <div class="col-xl-12">
        <div class="card easion-card">
            <div class="card-header">
                <div class="easion-card-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="easion-card-title"> Complex layout </div>
            </div>
            <div class="card-body ">
                <form asp-controller="Admin" asp-action="ProductEdit" method="POST">
                    <input type="hidden" name="ProductId" value="@Model.ProductId">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <img width="500" height="500" src="~/img/featured/@Model.imageUrl"/>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Başlık</label>
                                    <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Fiyat (₺)</label>
                                    <input type="number" min="0.5" step=0.1 class="form-control" asp-for="Price" placeholder="Fiyat">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Stok</label>
                                    <input min="0" type="number" class="form-control" asp-for="Stock" placeholder="Stok">
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputEmail4">Ürün Id</label>
                                    <input type="number" readonly class="form-control" asp-for="ProductId" placeholder="Ürün Id">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputEmail4">Kategori</label>
                                    <select class="form-control" name="categoryId">
                                        <option value="">Kategori Seçiniz</option>
                                        @foreach (var item in ViewBag.Categories)
                                        {
                                            if (item.CategoryId == Convert.ToInt32(Model.categoryId))
                                            {
                                                <option selected value="@item.CategoryId">@item.Name</option>
                                                continue;
                                            }
                                            <option value="@item.CategoryId">@item.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-12">
                                    <label for="inputAddress">Ürün Açıklaması</label>
                                    <textarea class="form-control" asp-for="Description" rows="10"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-8">
                                    <div class="form-row">
                                        <div class="col-md-6 form-group ">
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="isOnSale" type="checkbox" class="custom-control-input">
                                                <label class="custom-control-label" asp-for="isOnSale">Satışta</label>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="isHomePage" type="checkbox" class="custom-control-input">
                                                <label class="custom-control-label" asp-for="isHomePage">Anasayfa Ürünü</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary float-right">Değişikleri Kaydet</button>

                        </div>

                
               
