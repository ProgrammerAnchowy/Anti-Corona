@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{ Layout = "_LayoutAdmin"; }
<div class="container-fluid">
    <h1 class="dash-title">Roller</h1>
    <div class="row">

        <div class="col-lg-12">
            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Rol Ekle
                </a>
            </p>
            <div class="collapse" id="collapseExample">
                <div class="card card-body">
                    <form asp-controller="Admin" asp-action="RoleCreate" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-sm-12 pb-3">
                                <label>Rol Adı</label>
                                <input class="form-control" name="Name" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </form>
                </div>
            </div>
            <div class="card easion-card">
                <div class="card-header">
                    <div class="easion-card-icon">
                        <i class="fas fa-table"></i>
                    </div>
                    <div class="easion-card-title">Rol Bilgileri</div>
                </div>
                <div class="card-body ">
                    <table class="table table-hover table-in-card">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Rol Adı</th>
                                <th scope="col">Düzenle/Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>

                                            <td>
                                                <a href="/admin/RoleEdit/@item.Id" class="btn btn-primary btn-sm mr-2"><i class="fas fa-edit"></i></a>
                                                <form action="/admin/RoleDelete" method="post" style="display:inline">
                                                    <input type="hidden" name="roleId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-danger btn-sm "><i class="fas fa-trash-alt"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                      }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>