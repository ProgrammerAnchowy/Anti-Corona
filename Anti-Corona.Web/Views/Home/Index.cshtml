@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel

@using System.Globalization
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Component.InvokeAsync("Categories")
                <div class="mt-3">
                    <h5 class="font-weight-bold">@localizer["Fırsat Ürünü"]</h5>
                    <div class="card-body">
                        <img class="card-img-top" width="200" height="200" src="/img/featured/@Model.products[0].Images[1].ImageUrl" alt="Card image cap">
                        <div class="product__discount__item__text">
                            <h5><a href="/shop/details/@Model.products[0].ProductId">@Model.products[0].Title</a></h5>
                            <div class="product__item__price">@Convert.ToDouble(Model.products[0].Price).ToString("c") <span>@Convert.ToDouble(Model.products[0].Price + 7).ToString("c")</span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                       
                        <form action="#">
                            <input type="text" placeholder="@localizer["Neye ihtiyacınız var?"]">
                            <button type="submit" class="site-btn">@localizer["Bul"]</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+90 541 058 61 35</h5>
                            <span>7/24 @localizer["Destek Hizmeti"]</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/img/hero/maske.jpg">
                    <div class="hero__text">
                        <span>@localizer["Sosyal Mesafeye Dikkat Et"]</span>
                        <h2 class="text-white">@localizer["Önlemini Al"]</h2>
                        <a href="/shop" class="primary-btn">@localizer["Alışverişe Başla"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in ViewBag.Categories)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/@item.ImageUrl">
                            <h5><a href="/Shop/@item.Name">@(localizer[$"{@item.Name}"])</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>@localizer["Öne Çıkan Ürünler"]</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">@localizer["Tümü"]</li>
                        <li data-filter=".orange">@localizer["Maskeler"]</li>
                        <li data-filter=".fresh-meat">@localizer["Dezenfektanlar"]</li>
                        <li data-filter=".vegetables">@localizer["Eldivenler"]</li>
                        <li data-filter=".fastfood">@localizer["Siperlikler"]</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/img/featured/@item.Images[0].ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href=""><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/shop/details/@item.ProductId">@item.Title</a></h6>
                            <h5>@Convert.ToDouble(item.Price).ToString("c")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
}

