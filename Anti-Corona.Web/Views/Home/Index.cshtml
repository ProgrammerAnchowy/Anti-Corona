@model IndexViewModel
@using System.Globalization
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                @await Component.InvokeAsync("Categories")
            </div>
            <div class="col-lg-9">
                <div class="hero__search">
                    <div class="hero__search__form">
                        <form action="#">
                            <input type="text" placeholder="Neye ihtiyacınız var?">
                            <button type="submit" class="site-btn">BUL</button>
                        </form>
                    </div>
                    <div class="hero__search__phone">
                        <div class="hero__search__phone__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="hero__search__phone__text">
                            <h5>+90 541 058 61 35</h5>
                            <span>7/24 Destek Hizmeti</span>
                        </div>
                    </div>
                </div>
                <div class="hero__item set-bg" data-setbg="/img/hero/maske.jpg">
                    <div class="hero__text">
                        <span>Sosyal Mesafeye Dikkat Et</span>
                        <h2 class="text-white">Önlemini Al</h2>
                        <a href="#" class="primary-btn">Alışverişe Başla!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!-- Categories Section Begin -->
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="categories__slider owl-carousel">
                @foreach (var item in ViewBag.Categories)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="/img/categories/@item.ImageUrl">
                            <h5><a href="/Shop/@item.Name">@item.Name</a></h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Categories Section End -->
<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Öne Çıkan Ürünler</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Tümü</li>
                        <li data-filter=".orange">Maskeler</li>
                        <li data-filter=".fresh-meat">Dezenfektanlar</li>
                        <li data-filter=".vegetables">Eldivenler</li>
                        <li data-filter=".fastfood">Siperlikler</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="/img/featured/@item.Images[0].ImageUrl">
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="/shop/details/@item.ProductId">@item.Title</a></h6>
                            <h5>@Convert.ToDouble(item.Price).ToString("c")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


@section Scripts{
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/jquery.slicknav.js"></script>
    <script src="~/js/mixitup.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/main.js"></script>
}

