@model LoginModel
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg my-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Log In</h3></div>
                            <div class="card-body">
                                <div asp-validation-summary="All"></div>
                                <form asp-controller="Account" asp-action="Login" method="post">
                                    <div class="form-group">
                                        <label class="small mb-1">E-mail</label>
                                        <input class="form-control py-4" asp-for="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1">Parola</label>
                                        <input class="form-control py-4" asp-for="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    @*<div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" type="checkbox" asp-for="RememberMe" />
                                            <label class="custom-control-label" asp-for="RememberMe">Remember Me</label>
                                        </div>
                                    </div>*@
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                        <a class="small" href="">Parolanı Mı Unuttun?</a>
                                        <button class="btn btn-primary" type="submit">Giriş</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small"><a href="/account/register">Hesabın Yok Mu? Üye Ol.</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>